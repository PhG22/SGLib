<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivLoanBookCover"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tvLoanBookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLoanDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due: Dec 10, 2025" />

        <TextView
            android:id="@+id/tvLoanStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending Approval"
            android:textStyle="italic"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnRequestReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:visibility="gone" /> </LinearLayout>