<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.AddEditBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitleHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar/Editar Livro"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivBookCoverUpload"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/ico"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Capa do Livro"/>

        <Button
            android:id="@+id/btnUploadCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carregar Imagem da Capa"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/etBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:inputType="textCapWords"/>

        <EditText
            android:id="@+id/etBookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Autor"
            android:inputType="textCapWords"/>

        <EditText
            android:id="@+id/etBookPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Editora"
            android:inputType="textCapWords"/>

        <EditText
            android:id="@+id/etBookYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ano de Publicação"
            android:inputType="number"/>

        <EditText
            android:id="@+id/etBookQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantidade em estoque"
            android:inputType="number"/>

        <Button
            android:id="@+id/btnSaveBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>